<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link" id="submit-link" data-user-id="<%= current_user.id %>">
</form>

<div id="links-list">
  <% @links.each do |link| %>
    <ul>
      <li><%= link.title %></li>
      <li><%= link.url %></li>
      <li><%= link.read %></li>
    </ul>
  <% end %>
</div>

<h2>Hot Reads!</h2>
<ol id="hot-reads">
<% @hot_links.each do |read| %>
  <li class='hot-read'>
    <a href="<%= read.url %>"><%= read.url %></a>
  </li>
<% end %>
</ol>
